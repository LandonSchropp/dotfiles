{
  "includeCoAuthoredBy": false,
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(**/.env*)",
      "Read(**/.secret*)",
      "Read(**/env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.crt)",
      "Read(**/*.cert)",
      "Read(**/secrets/**)",
      "Read(**/credentials/**)"
    ],
    "additionalDirectories": ["~/Notes/Areas/AI"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/prettier"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/rubocop"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/shfmt"
          }
        ]
      }
    ]
  }
}
