#!/usr/bin/env bash

set -euo pipefail

git fetch
git checkout -q "$(git default-branch)"

branches="$(git branch --no-color "$@" | grep -v "^\\* ")"

# If there are no branches to delete, don't do anything.
if [ -z "$branches" ]; then
  echo "There are no branches to delete. ðŸ˜Ž"
  exit 0
fi

echo "$branches" | xargs -n 1 git branch -D
