[push]
  default = current
  followTags = true
  autoSetupRemote = true

[pull]
  ff = only

[alias]

  # Shortcuts
  a = add
  b = branch
  bs = branches
  c = commit
  cl = clone
  cp = cherry-pick
  fp = force-push
  fpu = force-pull
  fu = fixup
  l = compact-log
  m = merge
  my-bs = my-branches
  p = push --follow-tags
  pu = pull
  r = reset
  rb = !git fetch && git rebase-base --autosquash
  re = restore
  ri = !git fetch && git rebase-base -i
  s = status
  sc = smart-commit
  sq = squash
  sw = switch

  # Command aliases
  aliases = "config --get-regexp alias"
  amend = "commit --amend"
  compact-log = log \
    --graph \
    --pretty=format:'%Cred%h %Cgreen(%cs)%Creset%Creset %s %C(bold blue)<%an>%C(yellow)%d%Creset' \
    --abbrev-commit
  current-branch = "rev-parse --abbrev-ref HEAD"
  dad = "!curl https://icanhazdadjoke.com/ && echo"
  discard = git restore --staged --worktree
  squash = "fixup --squash"
  my-branches = "!git branches | grep -i '$()'"
  unstage = restore --staged 
  stash-staged = stash push --staged

  # Custom script aliases
  base-branch = "!$HOME/.config/git/bin/base-branch"
  branches = "!$HOME/.config/git/bin/branches"
  default-base-branch = "!$HOME/.config/git/bin/default-base-branch"
  default-branch = "!$HOME/.config/git/bin/default-base-branch"
  delete-all-branches = "!$HOME/.config/git/bin/delete-branches"
  delete-merged-branches = "!$HOME/.config/git/bin/delete-branches --merged"
  force-pull = "!$HOME/.config/git/bin/force-pull"
  force-push = "!$HOME/.config/git/bin/force-push"
  local-repos = "!$HOME/.config/git/bin/local-repos"
  my-branches = "!$HOME/.config/git/bin/my-branches"
  rebase-base = "!$HOME/.config/git/bin/rebase-base"
  review = "!$HOME/.config/git/bin/review"
  smart-commit = "!$HOME/.config/git/bin/smart-commit"
  what-did-i-do = "!$HOME/.config/git/bin/what-did-i-do"

  # Deprecated aliases
  co = "!$HOME/.config/git/bin/block-checkout"

[core]
  excludesfile = "~/.config/git/ignore"
  mergeoptions = "--no-edit"
  pager = "diff-so-fancy | less --tabs=2 -R"

[interactive]
  diffFilter = "diff-so-fancy --patch"

[fetch]
  prune = true

[rebase]
