[push]
  default = current
  followTags = true
  autoSetupRemote = true

[pull]
  ff = only

[alias]

  # Shortcuts
  a = add
  b = branch
  bs = branches
  c = commit
  cl = clone
  co = checkout
  cp = cherry-pick
  fp = force-push
  fpu = force-pull
  fu = fixup
  l = compact-log
  m = merge
  my-bs = my-branches
  p = push --follow-tags
  pu = pull
  r = reset
  re = restore
  ri = !git fetch && git rebase -i
  rio = !git fetch && git rebase -i origin/main
  s = status
  sq = squash
  sw = switch

  # Command aliases
  aliases = "config --get-regexp alias"
  compact-log = log \
    --graph \
    --pretty=format:'%Cred%h %Cgreen(%cs)%Creset%Creset %s %C(bold blue)<%an>%C(yellow)%d%Creset' \
    --abbrev-commit
  current-branch = "rev-parse --abbrev-ref HEAD"
  dad = "!curl https://icanhazdadjoke.com/ && echo"
  discard = git restore --staged --worktree
  squash = "fixup --squash"
  force-push = "push --force-with-lease"
  my-branches = "!git branches | grep -i '$()'"
  unstage = git restore --staged 

  # Custom script aliases
  branches = "!$HOME/.config/git/bin/branches"
  default-branch = "!$HOME/.config/git/bin/default-branch"
  delete-all-branches = "!$HOME/.config/git/bin/delete-branches"
  delete-merged-branches = "!$HOME/.config/git/bin/delete-branches --merged"
  force-pull = "!$HOME/.config/git/bin/force-pull"
  local-repos = "!$HOME/.config/git/bin/local-repos"
  my-branches = "!$HOME/.config/git/bin/my-branches"
  review = "!$HOME/.config/git/bin/review"
  stash-staged = "!$HOME/.config/git/bin/stash-staged"
  what-did-i-do = "!$HOME/.config/git/bin/what-did-i-do"

[core]
  excludesfile = "~/.config/git/ignore"
  mergeoptions = "--no-edit"
  pager = "diff-so-fancy | less --tabs=2 -R"

[interactive]
  diffFilter = "diff-so-fancy --patch"

[fetch]
  prune = true

[rebase]
  autosquash = true

[diff]
  colorMoved = zebra

[status]
  showUntrackedFiles = all

[color "diff"]
  meta = "yellow bold"
  commit = "green bold"
  frag = "magenta bold"
  old = "red bold"
  new = "green bold"
  whitespace = "red reverse"

[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "black bold red"
  newNormal = "green bold"
  newHighlight = "black bold green"

[merge]
  tool = vimdiff
  ff = only

[rerere]
  enabled = true

[log]
  abbrevCommit = true

[init]
  defaultBranch = main

[fixup]
  menu = fzf \
    --bind 'tab:toggle-preview' \
    --preview 'git show --color {+1}' \
    --preview-window=up:50% \
    --info hidden \
    --prompt 'üîç Search for a commit: '
  commit = true

[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
