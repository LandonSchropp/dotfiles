#!/usr/bin/env bash

set -euo pipefail

# Change into the root directory of the dotfiles.
cd "$(dirname "$0")/.."

# Ensure RCM is installed.
if ! [ -x "$(command -v "rcup")" ]; then
  echo "You must install RCM before running this command. (https://github.com/thoughtbot/rcm)"
  exit 1
fi

#!/usr/bin/env bash

set -euo pipefail

PRE_UP_HOOKS_DIRECTORY="$(dirname "${BASH_SOURCE[0]}")/pre-up-hooks"

"$PRE_UP_HOOKS_DIRECTORY/homebrew.sh"
"$PRE_UP_HOOKS_DIRECTORY/ruby.sh"

# Copy the dotfiles into the home directory
RCRC=$HOME/.dotfiles/rcrc rcup
