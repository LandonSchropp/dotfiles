#!/usr/bin/env bash

set -euo pipefail

git local-repos | while read -r REPO; do
  GIT_STATUS="$(git -C "$REPO" status --porcelain)"

  BRANCH=$(git -C "$REPO" default-branch)

  if [ -z "$BRANCH" ]; then
    echo "‚úã $(basename "$REPO") does not have a default branch."
    continue;
  fi

  if [ -n "$GIT_STATUS" ]; then
    echo "‚úã $(basename "$REPO") has local changes, so it wasn't updated."
    continue;
  fi

  git -C "$REPO" checkout --quiet "$BRANCH"

  if git ls-remote --exit-code --heads origin "$BRANCH"; then
    echo "RUNNING PULL"
    git -C "$REPO" pull --quiet origin "$BRANCH"
  fi

  echo "üëç $(basename "$REPO") was switched to main and updated."
done
