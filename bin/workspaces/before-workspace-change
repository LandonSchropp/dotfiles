#!/usr/bin/env bash

set -euo pipefail

# Toggle Amethyst tiling off (Command + Option + Control + Shift + D)
osascript <<'END'
tell application "System Events"
  keystroke "d" using {command down, option down, control down, shift down}
end tell
END

# Give some time for Amethyst to process the workspace change
sleep 0.01
